.server
  border 1px solid #8391B2
  box-sizing border-box
  border-radius 7px
  margin-bottom 16px
  padding 22px

  @media screen and (min-width: 1168px)
    margin-bottom 24px
    display flex
    flex-direction row
    align-items center
    margin-bottom: 12px
    max-width 900px
    max-height: 138px
    margin-left: 8.5%

.server__info
  //display block
  line-height 24px
  font-size 18px
  text-align center
  color solidBlack
  width 72%
  font-size: 14px;
  line-height: 120%;
  display: flex;
  align-items: center;
  //text-align: center;
  letter-spacing: 0.0025em;
  color: #29435D;
  margin-bottom 16px

  @media screen and (min-width: 1168px)
    width: 800px;
    height: 152px;
    left: 30px;
    /*width 20%
    margin 0
    line-height 20px*/

.server__info--name
  font-weight: bold
  
  @media screen and (min-width 1168px)
    position relative

.server__info--cpu
 
   @media screen and (min-width: 1168px)
     text-align: left
     max-width 87px

.server__info--hdd

  @media screen and (min-width: 1168px)
    padding-left 20px

.server__info--ram

  @media screen and (min-width: 1168px)
    max-width: 110px
    padding-left 30px

.server__info--gpu

  @media screen and (min-width 1168px)
    padding-left: 20px

.server__info--price
  font-weight: bold

  @media screen and (min-width: 1168px)
    padding-left 6px
