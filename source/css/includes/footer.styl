.social
  position relative
  display flex
  flex-direction column
  align-items center
  padding 32px 0 32px
  left -30%

  @media screen and (min-width 768px) and (max-width 1168px)
    left -40%

  @media screen and (min-width: 1168px)
    width 1168px
    left -50px
    padding 13px 17px 13px

.social__list
  //width 100%
  //max-width 420px
  margin 0
  padding 28px 11% 32px
  list-style none
  display flex
  //flex-direction column
  justify-content space-between
  flex-flow: column
  //flex-wrap wrap

  @media screen and (min-width: 1168px)
    max-width 380px
    flex-flow: row
    //padding 28px 0 32px

.social__link
  text-decoration none
  color white
  display flex
  justify-content center
  align-items center
  width 32px
  height 24px
  opacity 1
  outline none

.social__link:hover
  opacity 0.6

.social__link:focus
  filter drop-shadow(0 0 10px white)

.redirect
  padding-left: 65%
  display: flex
  flex-flow: column wrap
  align-content: space-between


.redirect__item
  //padding-left: 750px
  list-style none
  //padding-block-end: 15px

.redirect__link
  font-family: Museo Sans Cyrl;
  font-weight: normal;
  font-size: 14px;
  line-height: 120%;
  letter-spacing: 0.0275em;
  color: #8391B2;
  text-decoration: none

.redirect::before {
  counter-increment: redirects;
  content: counter(redirects);
}

.redirect__link:nth-child(3n+1) { order: 1; }
.redirect__link:nth-child(3n+2) { order: 2; }
.redirect__link:nth-child(3n)   { order: 3; }

.redirect::before 
  content: "";
  flex-basis: 100%;
  width: 0;
  order: 2;

/* Force new columns */
.redirect::after
  content: "";
  flex-basis: 100%;
  width: 0;
  order: 2;