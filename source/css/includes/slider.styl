.slider
  width 100%
  z-index 2

.slide__wrapper
  width 100%
  height 100%
  margin 0 auto
  padding 0 5%

  @media screen and (min-width: 1168px)
    width  1168px

.slide__title
  font-weight: bold
  line-height: 120%
  font-size: 18px;
  color:#29435D
  align-items: center
  letter-spacing: 0.0025em
  width 100%

  @media screen and (min-width 768px) and (max-width 1168px)
    position: relative
    width: 412px;
    height: 120px;
    top: 0;
    max-width: 350px
    font-size: 26px;
  
  @media screen and (min-width: 1168px)
    width: 528px;
    height: 76px;
    left: 150px;
    top: 136px;
    font-size: 32px;
    max-width: 440px

.slide__desc
  position: relative
  left: 0
  top -70px
  font-weight: normal;
  line-height 120%
  font-size: 12px;
  color #8391B2
  margin 40px 0
  width: 100%
  letter-spacing: 0.0025em
  align: left

  @media screen and (min-width 768px) and (max-width 1168px)
    width: 413px;
    height: 76px;
    top: -100px;
    font-size: 16px;
    line-height: 120%;

  @media screen and (min-width: 1168px)
    width: 528px;
    height: 88px;
    top: -50px
    font-size 18px
    align-items: center;

.server__pic__mobile
    position: relative
    left: 125px;
    top: -30px;
    transform: matrix(1, 0, 0, 1, 0, 0);

    @media screen and (min-width: 768px)
      display: none

.server__pic__desktop
    display: none
    
    @media screen and (min-width 1168px)
      position relative
      display: inline
      width: 380px;
      height: 363px;
      left: 550px;
      top: -280px; 

.server__pic__tablet
    display: none

    @media screen and (min-width 1168px)
      display: none

    @media screen and (min-width 768px) and (max-width 1168px)
      position: relative
      display inline
      width: 293px;
      height: 247px;
      left: 54%;
      top: -250px;