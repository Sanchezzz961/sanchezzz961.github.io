.offers
  margin-top: -20%
  z-index 4
  padding 80px 0 64px

.offers__title
  position: relative
  font-weight: bold;
  letter-spacing: 0.0025em;
  color: #29435D;
  text-align: center
  font-size: 18px;
  line-height: 120%

  @media screen and (min-width 768px)
     font-size 26px

  @media screen and (min-width: 1168px)
    line-height 38px
    font-size 32px
    
.offers__container
  width 100%
  padding 0 5%
  margin 0 auto

  @media screen and (min-width: 1168px)
    width 1168px
    padding 0 16px

label 
  font-size: 12px;
  line-height: 120%;
  letter-spacing: 0.0025em;
  color: #29435D;

  @media screen and (min-width 768px)
    font-size: 18px

p
  padding-top: 60px
  padding-bottom: 24px
  width: 289px;
  height: 32px;
  left: 150px;
  top: 650px;
  font-size: 14px;
  line-height: 120%;
  display: flex;
  align-items: center;
  letter-spacing: 0.0025em;

  @media screen and (min-width 768px)
    font-size 18px

.offers__checkbox
  width: 1.3em;
  height: 1.3em;
  border-radius: 50%;
  vertical-align: middle;
  border: 2px solid #29435D
  -webkit-appearance: none;
  outline: none;
  margin-left: 150px

.offers__checkbox:checked
  background-image: url("data:image/svg+xml,%3Csvg width='16' height='17' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E %3Cpath d='M9.89355 0.545747L4.54988 5.88946L2.10674 3.44632C1.81862 3.15826 1.35157 3.15826 1.06345 3.44632C0.775398 3.73444 0.775398 4.20149 1.06345 4.4896L4.02824 7.45438C4.1723 7.59838 4.36109 7.67044 4.54988 7.67044C4.73868 7.67044 4.92747 7.59838 5.07153 7.45438L10.9368 1.58909C11.2249 1.30097 11.2249 0.833922 10.9368 0.545806C10.6487 0.25769 10.1816 0.25769 9.89355 0.545747Z' fill='%230971F5'/%3E %3C/svg%3E")
  background-repeat: no-repeat
  border-color: #0971F5;
  opacity 1   

.offers__slider
  padding 5px
  //display: flex
  //flex-direction: column

  @media screen and (max-width 768px)
    position relative
    flex-direction: column

  @media screen and (min-width 1168px)
    position: relative
    left 25%

.slider__cpu
  -webkit-appearance: none
  background: #E5E5E5
  outline: none
  border-radius: 5px;
  height: 2px
  width: 200px

.slider__cpu::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: white;
    cursor: pointer;
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.18)
}

.slider__cpu::-webkit-slider-thumb:active
    width: 15px
    height: 15px
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.18);

.slider__cpu::-moz-range-progress
    background: #43e5f7; 

.ui-slider-range
  background: #71c0ff;
  height: 20px;
  position: absolute;
  border-top: 1px solid #5d99c8;
  border-bottom: 1px solid #5d99c8;
  transform: translateY(-1px)
